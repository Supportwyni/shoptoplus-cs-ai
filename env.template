# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AI Configuration
# Choose provider: 'alicloud', 'openai', or 'deepseek'
AI_PROVIDER=alicloud

# Alibaba Cloud Model Studio Configuration (DashScope)
ALICLOUD_API_KEY=your_alicloud_api_key_here

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# DeepSeek Configuration (if using DeepSeek)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# AI Model (optional - uses defaults based on provider)
# Alibaba Cloud: qwen-turbo, qwen-plus, qwen-max, qwen-max-longcontext
# DeepSeek: deepseek-chat, deepseek-coder
# OpenAI: gpt-4-turbo-preview, gpt-3.5-turbo
AI_MODEL=qwen-plus

# Server Configuration
PORT=3000
NODE_ENV=development

# WhatsApp Configuration (if using WhatsApp Business API)
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_access_token
WHATSAPP_VERIFY_TOKEN=your_verify_token

